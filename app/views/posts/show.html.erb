<div class="container my-5">
  <div class="row">
    <div class="col-md-12">
      <img class="w-100 card-img-top" src="<%= @post.image %>" width="100%" height="500">
      <div class="card">
        <div class="card-body">
          <h4><%= @post.title %></h4>
          <hr class="my-3">
          <div class="post-body">
            <p><%= @post.content %></p>
          </div>
          <div class="mt-12">
            <% if @like %>
              <%= link_to toggle_like_post_path(@post.id) do %>
                <%= fa_icon "thumbs-up", style: "font-size:30px;" %>
              <% end %>
            <% else %>
              <%= link_to toggle_like_post_path(@post.id) do %>
                 <%= fa_icon "thumbs-down", class: "mt-2" ,style: "font-size:30px;" %>
              <% end %>
            <% end %>
          </div>
          <div class="mt-4 float-right">
            <% if current_user == @post.user %>
              <%= link_to "삭제", post_path(@post), method: :delete, data: { confirm: "게시글을 삭제하시겠습니까?" }, class: "btn btn-danger" %>
              <%= link_to "수정", edit_post_path(@post), class: "btn btn-secondary" %>
            <% end %>
          </div>
          <hr/>
          <h5 class="mt-5 mb-8">댓글</h5>
          <hr/>
          <%= render 'comments/form' %>
        </div>
      </div>
      <% @comments.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>
      <div class="pagination justify-content-center mt-3">
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>
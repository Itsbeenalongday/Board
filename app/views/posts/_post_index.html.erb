<div class="container my-5">
  <div class="row">
    <% posts.each do |post| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <img src="<%= post.image.url(:thumb) if post.image? %>" class="card-img-top" />
          <div class="card-body">
            <h5 class="card-title"><%= post.title.truncate(8) %></h5>
            <div class="card-subtitle">작성자: <%= post.user&.email %></div>
              <br/>
              <span class="card-text"><%= post.content.truncate(15) %></span>
          </div>
          <div class="card-footer">
            <%= link_to "자세히 보기", post_path(post&.id), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
</div> 
